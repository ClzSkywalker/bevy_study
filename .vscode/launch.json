    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'bevy_study'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=bevy_study",
                    "--package=bevy_study"
                ],
                "filter": {
                    "name": "bevy_study",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                //issue: https://github.com/gfx-rs/wgpu/issues/4247
                "WGPU_BACKEND":"vulkan",
                "RUST_BACKTRACE":"1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'bevy_study'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=bevy_study",
                    "--package=bevy_study"
                ],
                "filter": {
                    "name": "bevy_study",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}